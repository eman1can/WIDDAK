<sequence values="BWJNSsR" symmetry="(xy)">

<!--    "A very simple tree"-->

  <texturemap>
    <li>air</li>
    <li>wood_log</li>
    <li>leaves</li>
  </texturemap>
  <!-- Create the bottom layer of N -->
    <one in="B" out="N" />
  <all in="N * * *" out="B * * *"/>

<!-- Create plots of land for a tree. It's long because it checks that it's not near another tree plot  -->
  <one in="BBBBBBBBB/BBBBBBBBB/BBBBBBBBB/BBBBBBBBB/BBBBBBBBB/BBBBBBBBB/BBBBBBBBB/BBBBBBBBB/BBBBBBBBB NNNNNNNNN/NNNNNNNNN/NNNNNNNNN/NNNNNNNNN/NNNNNNNNN/NNNNNNNNN/NNNNNNNNN/NNNNNNNNN/NNNNNNNNN"
       out="BBBBBBBBB/BBBBBBBBB/BBBBBBBBB/BBBBBBBBB/BBBBWBBBB/BBBBBBBBB/BBBBBBBBB/BBBBBBBBB/BBBBBBBBB NNNNNNNNN/NNNNNNNNN/NNNNNNNNN/NNNNNNNNN/NNNNNNNNN/NNNNNNNNN/NNNNNNNNN/NNNNNNNNN/NNNNNNNNN"  />

<!--build trunks-->
  <one in="B B B B B B B W N" out="W W W W W W W W N" />


<!--   raise trunks, randomly choosing trunks terminal height by placing R block on top-->
    <one>
        <rule in="* W *" out="W * *"/>
        <rule in="* W *" out="* R *" p=".2"/>
    </one>
<!--Turn those terminal R blocks to W-->
    <one in="R" out="W"/>


  <!-- Build branches on each side -->
  <one in="BWB" out="JWJ"/>

  <!-- Randomize the branch spacing -->
  <one in="J J J" out="J B B"/>
  <one in="J J J" out="B B J"/>
  <one in="J J" out="J B"/>
  <one in="J J" out="B J"/>

<!--  Extend the branches with probability-->
  <one in="WJBB" out="WJRR" p="0.75"/>
  <one in="JRRB" out="JJRR" p="0.75" steps="5" />

  <one in="JRR" out = "JRB"/>

<!--  Make leave bushels-->
  <one in="J B" out = "J R"/>
  <prl in="JB" out = "JR"/>
<!--  <one in ="JRB" out="JRR" p = "0.75"/>-->
<!--  <one in = "RRB" out="RRR" p = "0.5"/>-->

<!--  <prl in="W" out="N"/>-->
  <prl in="J" out="W"/>
  <prl in="R" out="J"/>

  <!-- Randomize the leaves -->
  <one in="BJB" out="JJJ" p="0.5" steps="5"/>
  <one in="JJ" out="JB" p="0.4" steps="5"/>
  <one in="J J" out="J B" p="0.3" steps="5"/>


<!--  Path stuff. Probably useless -->
