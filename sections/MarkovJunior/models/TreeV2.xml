<sequence values="BWGNR" symmetry="(xy)" origin="True">

<!--    "A very simple tree"-->

  <texturemap>
    <li>air</li>
    <li>wood_log</li>
    <li>leaves</li>
  </texturemap>
  <!-- Make the B cubes into R ones -->
  <one in="B" out="R"/>
  <!-- Turn all center Rs into B -->
  <one in="***/***/*** ***/*R*/*** ***/***/***" out="***/***/*** ***/*B*/*** ***/***/***"/>
  <!-- Create the bottom layer of N -->
  <one in="B B B B R" out="B N N N N"/>
  <!-- Remove the R border -->
  <one in="R" out="B"/>
  <!-- Expand trunk vertically -->
  <one in="* W *" out="W W W"/>
  <!-- Build branches on each side -->
  <one in="BWB" out="GWG"/>
  <!-- Remove Bottom Spacing -->
  <one in="N" out="B"/>
  <!-- Randomize the branch spacing -->
  <one in="G G G" out="G B B"/>
  <one in="G G G" out="B B G"/>
  <one in="G G" out="G B"/>
  <one in="G G" out="B G"/>


<!--  Extend the branches with probability-->
  <one in="WGBB" out="WGRR" p="0.75"/>
  <one in="GRRB" out="GGRR" p="0.75" steps="5" />

  <one in="GRR" out = "GRB"/>

<!--  Make leave bushels-->
  <one in="G B" out = "G R"/>
  <prl in="GB" out = "GR"/>
<!--  <one in ="GRB" out="GRR" p = "0.75"/>-->
<!--  <one in = "RRB" out="RRR" p = "0.5"/>-->

  <prl in="W" out="N"/>
  <prl in="G" out="N"/>
  <prl in="R" out="G"/>

</sequence>